;---------------------------------------
;       BSPWM MODULE
;---------------------------------------
[module/memory]
type = internal/memory
; Seconds to sleep between updates
; Default: 1
interval = 3
format = <label>
label = ﬙ %gb_used%  
format-foreground = ${colors.nord16}
format-background = ${colors.nord3}
format-padding = 1

[module/cpu]
type = internal/cpu 

